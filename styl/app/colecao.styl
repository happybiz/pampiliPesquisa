.img-colecao
    width: 300px

.slick-slide
    opacity : 0.4
    img 
        filter: blur(3px)

.slick-current
    opacity 1
    img 
        filter: blur(0)

.bg-colecao
    background-color: #ffffff
    margin-left: 18px
    padding: 10px 10px
    box-shadow: 0 0 5px #b1afaf

.botoes-colecao
    text-align: center
    padding-top: 10px;
    & > *
        background-color: transparent
        border-radius: 20px
    & > *:hover
        background-color: transparent

.curti
    img 
        width: 40px




.amei
    img 
        width: 40px

.indiferente
    img 
        width: 40px

.naoGostei
    img 
        width: 40px

.slick-list
    padding-top: 10px !important
    padding-bottom: 10px !important

.botoes-colecao button
    position relative
    cursor pointer
    border: none;
    .input-colecao
        position absolute
        top: 0
        left 0
        width: 100%;
        height: 100%;
        opacity 0

.borda-check
    img
        border 2px solid #ea078a
        box-shadow: 0 0 10px #ea078a
        border-radius: 50%;
        &:hover
            border 2px solid #ea078a
            box-shadow: 0 0 10px #ea078a
            border-radius: 50%;

.img-certo
    position relative
    &::after
        content: ''
        background-image: url('/images/pesquisa/colecao/certo.png');
        width: 50px
        height 50px
        background-position: center center
        background-repeat: no-repeat
        position: absolute
        right 0
        top 0
        background-size: cover

.btn-cinza
    filter: grayscale(100%)

.btn-ativo
    filter: grayscale(0)

.slick-prev, 
.slick-next
    width: 60px !important
    height: 60px !important

.btn-finalizar
    filter: grayscale(45%);

.slick-prev
    z-index 9

.slick-next 
    visibility: hidden

.hr
    border: 0;
    border-top: 1px solid #eee;
    margin-top: 0;
    margin-bottom: 0;

@media screen and (max-width: 1330px)
    .curti,
    .amei,
    .indiferente,
    .naoGostei
        img
            width: 30px
            height 30px
            background-size: cover

@media screen and (max-width: 773px)
    .curti,
    .amei,
    .indiferente,
    .naoGostei
        img
            width: 28px
            height 28px
    
    .titulo-colecao
        line-height: 45px
    
    .pesquisa-total
        margin-top: 20px;
    
    .rodape-pesquisa
        padding-top: 0;