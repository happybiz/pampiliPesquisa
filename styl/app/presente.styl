.btn-presente-escolha
    position relative
    background-color: #e8e8e8
    transition .5s
    border: 1px solid lightgray
    .inputCheck
        position absolute
        top: 0
        left 0
        width: 100%;
        height: 100%;
        opacity 0
    &:focus
        background-color: #e8e8e8
    img 
        max-height 200px
        margin auto
    &.ativo
        background-color white
        border: 2px solid #ec529c;
        box-shadow: 5px 2px 10px rgba(31,18,18,0.51), 0 0 20px #e257a6
        transform scale(1.2)
        z-index 3
        img
            background: white;
            filter grayscale(0)