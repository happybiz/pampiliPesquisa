/** 
Definir as principais cores para os inputs
*/
$border-color = $colors['main']
$border-color-focus = $colors['main']
$border-radius = 4px


input
select
textarea
input.form-control
select.form-control
textarea.form-control
    border-radius: $border-radius
    border: 1px solid $border-color
    color: black
    &:focus // inputs selecionados
      border: 2px solid lighten($border-color-focus, 20%)
      box-shadow 0 0 3px lighten($colors['main'], 30%)
    &[disabled]
      border: 2px solid darkgray

input.is-error
select.is-error
textarea.is-error
    border: 2px solid #de4040
    color: $colors['black']

input.is-valid
select.is-valid
textarea.is-valid
    border: 2px solid green
    color: $colors['black']





input[type="file"]
  border 0

select
select.form-control
  /* styling */
  display: inline-block;
  line-height: 1.5em;
  padding: 0.5em 3.5em 0.5em 1em;
  /* reset */
  margin: 0;      
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  -webkit-appearance: none;
  -moz-appearance: none;


select
select.form-control
  background-image: url('../images/arrow.png')
  background-position:
    calc(100% - 20px) 1em
  background-size: 15px
  background-repeat: no-repeat;

input
select
select.input-lg
input.input-lg
  height 56px
