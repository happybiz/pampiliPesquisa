
.wrraper
    padding-bottom 50px
.pampili-logo
    max-width 150px
    margin auto
    padding-top 0
    

.pampili-logo
    img:hover
        animation pulsar 1s infinite

.linha-rosa
    border-bottom 2px solid $colors['main']

.env-info
    position absolute 
    left 30px
    top 60px
.envelope
    width 60%
    min-width 310px
    margin-left auto 
    margin-right auto
    padding-bottom 30px


@media screen and (max-width: 1124px)
    .envelope
        width 90%

@media screen and (max-width: 956px)
    .env-info
        position absolute 
        left 20px
        top 30px
    .envelope
        width 90%
@media screen and (max-width: 480px)
    .env-info
        position absolute 
        left 10px
        top 20px

@media screen and (max-width: 420px)
    .envelope
        width 98%

