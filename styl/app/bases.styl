.basesBoas
    display flex
    justify-content center
    flex-wrap wrap
    padding-bottom 80px
    margin-top 40px
    & > .base 
        border 1px solid lightgray
        border-radius 20px
        width 19%
        margin 0 10px
        cursor pointer
        text-align center
        box-shadow 2px 2px 4px black
        margin-top: 20px
        .base-header
            border-bottom 1px solid black
            text-transform uppercase
        &.ativo
            background-color: $colors['main']
            color: white
            .base-header
                border-bottom 1px solid white
                text-transform uppercase
        &.base-atual
            color darkgray
            opacity 1
            box-shadow: none
            border: 2px solid $colors['second']
            .base-title
                font-size 40px
                padding 15px 0

.linha-vertical
    border-right: 2px solid $colors['main']
    margin-top: 20px

.env-content-base
    padding-bottom 60px
    padding-bottom 20px
    padding-right 20px
    padding-left 20px

.base-title
    text-align center
    font-size 60px

.base-corpo
    padding-top 20px
    padding-bottom 20px
    p
        margin-bottom 6px 
        padding 0




.base-rodape
    img
        max-width 20px

.rodape-base    
    max-width: 220px;
    margin: auto;
    display flex 
    & > *
        align-self center
        margin 0 5px


 
.outroNumero
    display none
    color black
    position absolute
    width 100%
    border 1px solid black
    border-radius 15px
    left 0
    background-color white
    p
        margin-bottom: 5px

@media screen and (max-width: 937px)
    .basesBoas
        & > .base 
            width 24%
            text-align center
            box-shadow 2px 2px 4px black
            .base-header
                border-bottom 1px solid black
                text-transform uppercase


@media screen and (max-width: 750px)
    .basesBoas
        & > .base 
            width 45%

@media screen and (max-width: 547px)
    .basesBoas
        & > .base 
            width 98%
