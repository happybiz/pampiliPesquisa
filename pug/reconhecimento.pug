extends ./_layouts/pesquisa.pug

block content
    article.col-md-offset-1.col-md-10.col-lg-offset-2.col-lg-8
        // sair
        //.logout
            img(src="images/sair.svg", alt="Log Out")

        .pampili-logo
            a(href="/")
                img.img-responsive(src="/images/rosa-pampili.svg", alt="Pampili")
        .envelope-wrraper
            .env-title
                h3.text-center
                    span.linha-rosa Antes de começar.
            .well.pesquisa-total
                .pesquisa.clearfix
                    p.text-center.mg-20-top.title-pesquisa Qual a sua idade?
                    .pesquisa-wrraper
                        .col-xs-4
                            label.btn.btn-primary.btn-block.btn-pesquisa
                                h4.img-check 4 a 6 <br>anos
                                input(type="radio" name="chk1" id="item1" value="3a6" class="hidden" autocomplete="off")
                        .col-xs-4
                            label.btn.btn-primary.btn-block.btn-pesquisa
                                h4.img-check 4 a 6 <br>anos
                                input(type="radio" name="chk1" id="item2" value="3a7" class="hidden" autocomplete="off")
                        .col-xs-4
                            label.btn.btn-primary.btn-block.btn-pesquisa
                                h4.img-check + de 7 <br>anos
                                input(type="radio" name="chk1" id="item3" value="10" class="hidden" autocomplete="off")

                hr
                .rodape-pesquisa
                    button.btn.btn-lg.btn-pampili.btn-finalizar.center-block(onclick='location.href="/reconhecimento2.html"', disabled) Próximo >>

        canvas#canvas

block append scriptsJS 
    script(src="js/app.js")
    script(src="js/heart.js")